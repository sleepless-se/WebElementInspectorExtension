{
    "manifest_version": 3,
    "name": "Element Highlighter",
    "version": "1.0",
    "description": "Highlight elements and get their paths",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}
